<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="it_geeks.info.gawla_app">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_gawla"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_gawla_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"> <!-- usesCleartextTraffic << resolve connectivity issue with api 28 -->

        <activity
            android:name=".views.MainActivity"
            android:clearTaskOnLaunch="true">
            <intent-filter>
                <action android:name="main_page" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.NotificationActivity">
            <intent-filter>
                <action android:name="notification_page" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.splashActivities.SplashActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.SalonActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".views.WinnerActivity" />
        <activity android:name=".views.AllSalonsActivity" />
        <activity android:name=".views.CardActivity" />
        <activity android:name=".views.splashActivities.IntroActivity" />
        <activity android:name=".views.loginActivities.SubscribePlanActivity" />
        <activity android:name=".views.loginActivities.PaymentActivity" />
        <activity android:name=".views.loginActivities.ForgetPasswordActivity" />
        <activity android:name=".views.loginActivities.CreateAccountActivity" />
        <activity android:name=".views.loginActivities.LoginActivity" />
        <activity android:name=".views.menuOptions.SettingsActivity" />
        <activity android:name=".views.menuOptions.MoreAboutGawlaActivity" />
        <activity android:name=".views.menuOptions.PrivacyPolicyActivity" />
        <activity android:name=".views.menuOptions.TermsAndConditionsActivity" />
        <activity android:name=".views.menuOptions.CallUsActivity" />
        <activity android:name=".views.menuOptions.LanguageActivity" />
        <activity android:name=".views.menuOptions.WebPageActivity" />
        <activity android:name=".views.accountOptions.BuyingProcessesActivity" />
        <activity android:name=".views.accountOptions.AccountDetailsActivity" />
        <activity
            android:name=".views.accountOptions.PrivacyDetailsActivity"
            android:windowSoftInputMode="adjustPan" />

        <receiver
            android:name=".general.ConnectionChangeReceiver"
            android:label="NetworkConnection">
            <intent-filter>
                <action android:name="android.net.com.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <receiver android:name=".general.NotificationInteractionsReceiver" />

        <service android:name=".repository.services.UploadImageService" /> <!-- Firebase Services -->
        <service android:name=".repository.services.fcm.NotificationFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher_gawla" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />
    </application>

</manifest>