<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it_geeks.info.gawla_app">

<uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_gawla"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_gawla_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Views.MainActivity">
        </activity>
        <activity android:name=".Views.SalonActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Views.SplashActivities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Views.SplashActivities.IntroActivity" />
        <activity android:name=".Views.LoginActivities.SubscribePlanActivity" />
        <activity android:name=".Views.LoginActivities.PaymentActivity" />
        <activity android:name=".Views.LoginActivities.ForgetPasswordActivity" />
        <activity android:name=".Views.LoginActivities.CreateAccountActivity" />
        <activity android:name=".Views.LoginActivities.LoginActivity" />
        <activity android:name=".Views.ProductDetailsActivity" />
        <activity android:name=".Views.SettingsActivity"/>

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

    </application>

</manifest>