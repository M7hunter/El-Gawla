<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reset_pass_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.signing.ResetPasswordActivity">

    <!-- header -->
    <TextView
        android:id="@+id/tv_sign_up_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/margin_medium"
        android:text="@string/reset_password"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_x_medium"
        android:textStyle="bold" />

    <!-- content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_sign_up_header"
        android:fillViewport="true">
        <!-- scroll main layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- logo -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8xlarge"
                android:layout_marginBottom="@dimen/margin_5xlarge"
                android:src="@drawable/gawla_logo_blue" />

            <!-- hint -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:text="@string/enter_new_pass_hint" />

            <!-- enter pass -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_enter_pass"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_3xlarge"
                android:layout_marginEnd="@dimen/margin_3xlarge"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:hint="@string/new_password"
                android:textColorHint="@color/paleGrey2"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_enter_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/margin_xlarge"
                    android:paddingTop="@dimen/et_v_padding"
                    android:paddingEnd="@dimen/margin_xlarge"
                    android:paddingBottom="@dimen/et_v_padding"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    app:counterMaxLength="26" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- renter pass -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_renter_pass"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_3xlarge"
                android:layout_marginEnd="@dimen/margin_3xlarge"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:hint="@string/renter_password"
                android:textColorHint="@color/paleGrey2"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_renter_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/margin_xlarge"
                    android:paddingTop="@dimen/et_v_padding"
                    android:paddingEnd="@dimen/margin_xlarge"
                    android:paddingBottom="@dimen/et_v_padding"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    app:counterMaxLength="26" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- reset -->
            <Button
                android:id="@+id/btn_reset_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_xlarge"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:layout_marginEnd="@dimen/margin_xlarge"
                android:backgroundTint="@color/colorPrimary"
                android:paddingTop="@dimen/btn_v_padding"
                android:paddingBottom="@dimen/btn_v_padding"
                android:text="@string/reset"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>