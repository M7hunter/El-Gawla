<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_single_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- scroll main layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xx_large"
            android:background="@drawable/bg_rounded_top_corners_white"
            android:orientation="vertical">

            <!-- header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="@string/card"
                android:textAllCaps="true"
                android:textColor="@color/battleshipGrey"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <!-- icon container -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/bg_circle_grey">
                <!-- card icon -->
                <View
                    android:id="@+id/single_card_icon"
                    android:layout_width="@dimen/single_card_width"
                    android:layout_height="@dimen/single_card_height"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_xxxx_large"
                    android:layout_marginTop="@dimen/margin_xx_large"
                    android:layout_marginEnd="@dimen/margin_xxxx_large"
                    android:layout_marginBottom="@dimen/margin_xx_large"
                    android:background="@drawable/dynamic_card"
                    android:padding="@dimen/margin_large" />
            </FrameLayout>

            <!-- card title -->
            <TextView
                android:id="@+id/single_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_medium"
                android:text="red card"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <!-- card description -->
            <TextView
                android:id="@+id/single_card_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_medium"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <!-- btn confirm -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_confirm_buying_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xx_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_xx_large"
                android:layout_marginBottom="@dimen/margin_large"
                app:cardCornerRadius="@dimen/margin_small"
                app:cardElevation="@dimen/margin_small">
                <!-- card main layout -->
                <LinearLayout
                    android:id="@+id/payment_confirm_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_blue_angled_270"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- card price container -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:gravity="center">

                        <!-- label -->
                        <TextView
                            android:id="@+id/tv_price_label_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/card_price_salon"
                            android:textColor="@color/babyBlue"
                            android:textSize="@dimen/text_size_small" />

                        <!-- price -->
                        <TextView
                            android:id="@+id/single_card_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:gravity="center"
                            android:text="300 egp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- confirm -->
                    <TextView
                        android:id="@+id/tv_buy_card_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:gravity="center"
                        android:text="@string/Confirm_payment"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ProgressBar
                android:id="@+id/pb_buy_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_medium"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- close btn -->
    <ImageView
        android:id="@+id/close_bottom_sheet_single_card"
        android:layout_width="@dimen/image_cards_round_updates"
        android:layout_height="@dimen/image_cards_round_updates"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_xxx_large"
        android:background="@drawable/bg_circle_blue_270"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/margin_large"
        android:src="@drawable/ic_close"
        android:tint="@android:color/white" />

</RelativeLayout>