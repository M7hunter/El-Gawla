<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cards_bag_btn_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:padding="@dimen/margin_xTiny"
    tools:showIn="@layout/activity_salon">

    <!-- icon -->
    <ImageView
        android:layout_width="@dimen/image_cards_round_updates"
        android:layout_height="@dimen/image_cards_round_updates"
        android:background="@drawable/bg_circleed_c_white_borderd_c_primary"
        android:padding="@dimen/margin_large"
        android:src="@drawable/ic_cards"
        android:tint="@color/colorPrimary" />

    <!-- cards count -->
    <TextView
        android:id="@+id/tv_cards_count"
        android:layout_width="@dimen/margin_xlarge"
        android:layout_height="@dimen/margin_xlarge"
        android:background="@drawable/bg_circle_red"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold" />

</RelativeLayout>