<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGrey"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".views.card.CardActivity">

    <!-- header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/margin_small">
        <!-- card main layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layoutDirection="rtl"
            android:padding="@dimen/margin_small">

            <include layout="@layout/layout_back" />

            <TextSwitcher
                android:id="@+id/ts_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="الكارت الاحمر" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- card details container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_medium"
        android:layout_weight="3"
        app:cardCornerRadius="@dimen/margin_small"
        app:cardElevation="@dimen/margin_tiny">
        <!-- card main layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!-- icon container -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_medium"
                android:background="@drawable/bg_circle_grey">
                <!-- card icon -->
                <View
                    android:id="@+id/v_card_icon"
                    android:layout_width="@dimen/single_card_width"
                    android:layout_height="@dimen/single_card_height"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_xxxx_large"
                    android:layout_marginTop="@dimen/margin_xx_large"
                    android:layout_marginEnd="@dimen/margin_xxxx_large"
                    android:layout_marginBottom="@dimen/margin_xx_large"
                    android:background="@drawable/dynamic_card"
                    android:padding="@dimen/margin_large" />
            </FrameLayout>

            <!-- card description -->
            <TextSwitcher
                android:id="@+id/ts_card_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_medium" />

            <!-- btn buy -->
            <Button
                android:id="@+id/btn_buy_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xx_large"
                android:paddingStart="@dimen/margin_xxxx_large"
                android:paddingTop="@dimen/margin_large"
                android:paddingEnd="@dimen/margin_xxxx_large"
                android:paddingBottom="@dimen/margin_large"
                android:text="@string/buy_card"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- store list container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/margin_small"
        app:cardElevation="@dimen/margin_small">
        <!-- card main layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cards_list_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/item_card_list"
                tools:orientation="horizontal"
                tools:samples="" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
