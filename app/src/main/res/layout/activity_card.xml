<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGrey"
    tools:context=".views.CardActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- scroll main layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <!-- header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/layout_main_header" />

                <!-- back -->
                <ImageView
                    android:id="@+id/card_back"
                    android:layout_width="@dimen/icon_back"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/margin_small"
                    android:src="@drawable/ic_arrow_left_only" />

            </RelativeLayout>

            <!-- first container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/margin_small"
                app:cardElevation="@dimen/margin_tiny">
                <!-- card main layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- icon container -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_medium"
                        android:background="@drawable/bg_circle_grey">
                        <!-- card icon -->
                        <View
                            android:id="@+id/v_card_icon"
                            android:layout_width="@dimen/single_card_width"
                            android:layout_height="@dimen/single_card_height"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_xxxx_large"
                            android:layout_marginTop="@dimen/margin_xx_large"
                            android:layout_marginEnd="@dimen/margin_xxxx_large"
                            android:layout_marginBottom="@dimen/margin_xx_large"
                            android:background="@drawable/single_card"
                            android:padding="@dimen/margin_large" />
                    </FrameLayout>

                    <!-- card title -->
                    <TextView
                        android:id="@+id/tv_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_medium"
                        android:text="@string/card"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <!-- card description -->
                    <TextView
                        android:id="@+id/tv_card_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_medium"
                        android:gravity="center"
                        android:text="@string/no_content"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <!-- btn buy -->
                    <Button
                        android:id="@+id/btn_buy_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_large"
                        android:paddingStart="@dimen/margin_xxx_large"
                        android:paddingTop="@dimen/margin_small"
                        android:paddingEnd="@dimen/margin_xxx_large"
                        android:paddingBottom="@dimen/margin_small"
                        android:text="@string/buy_card_to_join"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- second container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_small"
                app:cardCornerRadius="@dimen/margin_small"
                app:cardElevation="@dimen/margin_small">
                <!-- card main layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cards_list_recycler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/bottom_sheet_category" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>