<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".views.loginActivities.LoginActivity">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- scroll main layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/sign_in"
                android:textAllCaps="true"
                android:textColor="@color/BlueDark"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <!-- google plus -->
            <LinearLayout
                android:id="@+id/btn_google_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginTop="@dimen/margin_xxlarge"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginRight="@dimen/margin_xxlarge"
                android:background="@drawable/btn_google_plus"
                android:gravity="center"
                android:padding="@dimen/margin_small">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/googleg_standard_color_18"
                    android:gravity="center"
                    android:text="@string/google_plus"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- actual facebook btn -->
            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <!-- facebook -->
            <LinearLayout
                android:id="@+id/btn_facebook_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginTop="@dimen/margin_medium"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginRight="@dimen/margin_xxlarge"
                android:background="@drawable/btn_facebook"
                android:gravity="center"
                android:padding="@dimen/margin_small">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/com_facebook_button_icon"
                    android:gravity="center"
                    android:text="@string/facebook"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="#cfcfcf" />

            <!-- email -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:focusable="true"
                android:layout_marginStart="@dimen/margin_xxlarge"
                android:layout_marginEnd="@dimen/margin_xxlarge"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:layout_weight="1"
                android:textColorHint="@color/paleGrey2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/margin_xlarge"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingEnd="@dimen/margin_xlarge"
                    android:paddingBottom="@dimen/margin_small"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- pass -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:focusable="auto"
                android:layout_marginStart="@dimen/margin_xxlarge"
                android:layout_marginEnd="@dimen/margin_xxlarge"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:layout_weight="1"
                android:textColorHint="@color/paleGrey2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/margin_xlarge"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingEnd="@dimen/margin_xlarge"
                    android:paddingBottom="@dimen/margin_small"
                    app:counterMaxLength="26"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- sign in btn -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxlarge"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_xxlarge"
                android:text="@string/sign_in"
                android:textSize="@dimen/text_size_large"
                android:padding="@dimen/margin_small"
                android:textStyle="bold" />

            <!-- forget pass btn -->
            <Button
                android:id="@+id/txt_forget_password"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_xxlarge"
                android:layout_marginEnd="@dimen/margin_xxlarge"
                android:padding="@dimen/margin_small"
                android:text="@string/forgetPassword"
                android:textColor="@color/blueyGrey"
                android:textSize="@dimen/text_size_medium"
                app:rippleColor="@color/paleGrey2" />

            <!-- create account btn -->
            <Button
                android:id="@+id/txt_Create_Account"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_xxlarge"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_xxlarge"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:padding="@dimen/margin_small"
                android:text="@string/create_account"
                android:textColor="@color/darkSkyBlue"
                android:textSize="@dimen/text_size_large"
                app:rippleColor="@color/paleGrey2" />

        </LinearLayout>
    </ScrollView>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/login_loading"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:SpinKit_Color="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>