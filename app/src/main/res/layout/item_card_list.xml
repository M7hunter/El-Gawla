<?xml version="1.0" encoding="utf-8"?><!-- icon container -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:layout_margin="@dimen/margin_medium"
    android:background="@drawable/bg_circle_grey">
    <!-- card icon -->
    <View
        android:id="@+id/v_card_icon_cardList"
        android:layout_width="@dimen/icon_notification"
        android:layout_height="@dimen/image_cards_round_updates"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_xlarge"
        android:layout_marginBottom="@dimen/margin_medium"
        android:background="@drawable/single_card"
        android:padding="@dimen/margin_large" />
</FrameLayout>