<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xx_large"
        android:background="@drawable/bg_rounded_top_corners_white"
        android:gravity="center"
        android:orientation="vertical">

        <!-- title -->
        <TextView
            android:id="@+id/tv_calender_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:gravity="center"
            android:text="@string/from"
            android:textAllCaps="true"
            android:textColor="@color/colorSecondary"
            android:textDirection="locale"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <CalendarView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_medium"
            android:paddingBottom="@dimen/margin_medium" />

    </LinearLayout>

    <!-- close btn -->
    <Button
        android:id="@+id/close_bottom_sheet_calender"
        android:layout_width="@dimen/image_cards_round_updates"
        android:layout_height="@dimen/image_cards_round_updates"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_xxx_large"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/margin_small"
        android:padding="@dimen/margin_large"
        app:cornerRadius="200dp"
        app:icon="@drawable/ic_close"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:rippleColor="@color/paleRed" />

</RelativeLayout>