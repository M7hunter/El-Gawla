<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium"
    tools:showIn="@layout/activity_salon">

    <FrameLayout
        android:id="@+id/cv_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_corners_white"
            app:cardCornerRadius="@dimen/margin_x_small"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false">

            <!-- tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <!-- top ten tab -->
                <TextView
                    android:id="@+id/tv_top_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoMirrored="true"
                    android:background="@drawable/bg_rectangle_blue"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:text="@string/top_ten"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <!-- salon details tab -->
                <TextView
                    android:id="@+id/tv_product_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoMirrored="true"
                    android:background="@drawable/bg_rectangle_blue"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:text="@string/product_details"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <!-- salon activity tab -->
                <TextView
                    android:id="@+id/tv_salon_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rectangle_white_border_midblue"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:text="@string/salon_activity"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <!-- salon chat tab -->
                <TextView
                    android:id="@+id/tv_salon_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rectangle_white_border_midblue"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:text="@string/chat_room"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

            <!-- border -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_rounded_corners_midblue" />

        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- new messages counter -->
    <TextView
        android:id="@+id/tv_new_chat_message_counter"
        android:layout_width="@dimen/margin_large"
        android:layout_height="@dimen/margin_large"
        android:background="@drawable/bg_circle_green"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_tiny"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/cv_tabs"
        app:layout_constraintEnd_toEndOf="@+id/cv_tabs"
        app:layout_constraintStart_toEndOf="@+id/cv_tabs"
        app:layout_constraintTop_toTopOf="@+id/cv_tabs"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

