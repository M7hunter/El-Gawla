<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".views.intro.IntroActivity">

    <!-- top bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:layoutDirection="rtl">

        <!-- skip -->
        <Button
            android:id="@+id/btn_intro_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:paddingStart="@dimen/margin_xlarge"
            android:paddingTop="@dimen/margin_tiny"
            android:paddingEnd="@dimen/margin_xlarge"
            android:text="@string/skip"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <!-- previous -->
        <ImageButton
            android:id="@+id/ib_intro_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_ripple_back"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_arrow_back"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <!-- slides  pager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/intro_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layoutDirection="locale" />

    <!-- dots -->
    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_xx_large"
        android:background="@drawable/dots_shape"
        android:gravity="center"
        android:orientation="horizontal" />

    <!-- next -->
    <Button
        android:id="@+id/btn_intro_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xxxx_large"
        android:backgroundTint="@color/colorSecondary"
        android:paddingStart="@dimen/margin_xxxx_large"
        android:paddingTop="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_xxxx_large"
        android:paddingBottom="@dimen/margin_small"
        android:text="@string/next"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold" />

    <!-- sign bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layoutDirection="rtl">

        <!-- sign up -->
        <TextView
            android:id="@+id/tv_intro_sign_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_right_corner_c_light_primary"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/margin_large"
            android:text="@string/sign_up"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold" />

        <!-- sign in -->
        <TextView
            android:id="@+id/tv_intro_sign_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_left_corner_c_primary_dark"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/margin_large"
            android:text="@string/sign_in"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>