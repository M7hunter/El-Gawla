<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rounded_top_corners_white"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <!-- scroll main layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="vertical">

        <!-- images -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- main video player container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <VideoView
                    android:id="@+id/player"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/btn_play_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:alpha="0"
                    android:padding="@dimen/margin_small"
                    android:src="@drawable/ic_pause" />

            </RelativeLayout>

            <!-- main image -->
            <ImageView
                android:id="@+id/product_details_main_image"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:padding="@dimen/margin_small"
                android:scaleType="centerInside"
                tools:src="@tools:sample/backgrounds/scenic" />

        </RelativeLayout>

        <!-- sub images recycler -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_details_images_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_small"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_product_sub_image"
            tools:orientation="horizontal" />

        <!-- name -->
        <TextView
            android:id="@+id/product_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:padding="@dimen/margin_tiny"
            android:text="@string/no_content"
            android:textColor="@color/duskBlue"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <!-- separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:background="@color/paleGreyTwo" />

        <!-- category container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:orientation="horizontal"
            android:padding="@dimen/margin_tiny">

            <!-- cost label -->
            <TextView
                android:id="@+id/tv_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:text="@string/category"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <!-- cost -->
            <TextView
                android:id="@+id/product_details_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_content"
                android:textColor="@color/azureTwo"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:background="@color/paleGreyTwo" />

        <!-- initial container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:orientation="horizontal"
            android:padding="@dimen/margin_tiny">

            <!-- initial label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:text="@string/initial_value"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <!-- initial -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/one_pound"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:background="@color/paleGreyTwo" />

        <!-- cost container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:orientation="horizontal"
            android:padding="@dimen/margin_tiny">

            <!-- cost label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:text="@string/commercial_price"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <!-- cost -->
            <TextView
                android:id="@+id/product_details_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_content"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:background="@color/paleGreyTwo" />

        <!-- description container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_marginEnd="@dimen/margin_large"
            android:orientation="vertical"
            android:padding="@dimen/margin_tiny">

            <!-- description label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_tiny"
                android:text="@string/the_description"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <!-- description -->
            <TextView
                android:id="@+id/product_details_descriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:gravity="start"
                android:padding="@dimen/margin_tiny"
                android:textSize="@dimen/text_size_small"
                tools:text="@tools:sample/lorem/random" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
