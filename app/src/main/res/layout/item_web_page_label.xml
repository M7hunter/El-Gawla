<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_3xlarge"
        android:layout_marginEnd="@dimen/margin_3xlarge"
        android:background="@color/paleGrey2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_corners_white"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/btn_v_padding">

        <!-- label -->
        <TextView
            android:id="@+id/tv_web_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_x_medium"
            tools:text="@tools:sample/lorem" />

        <!-- icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow"
            android:tint="@android:color/black"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</LinearLayout>