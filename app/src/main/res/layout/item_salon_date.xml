<?xml version="1.0" encoding="utf-8"?><!-- card main layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:background="@drawable/bg_rounded_corners_white"
    android:elevation="@dimen/margin_small"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_xTiny"
        android:gravity="center"
        android:orientation="vertical">

        <!-- day of month -->
        <TextView
            android:id="@+id/date_day_of_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="29"
            android:textColor="@color/niceBlue"
            android:textSize="@dimen/text_size_xxlarge"
            android:textStyle="bold" />

        <!-- month -->
        <TextView
            android:id="@+id/date_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="يونيو"
            android:textColor="@color/niceBlue"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

    <!-- separator -->
    <View
        android:id="@+id/date_separator"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@color/niceBlue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_large"
        android:gravity="center"
        android:orientation="vertical">

        <!-- day of week -->
        <TextView
            android:id="@+id/date_day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الجمعة"
            android:textColor="@color/niceBlue"
            android:textSize="@dimen/text_size_medium" />

        <!-- salons count -->
        <TextView
            android:id="@+id/date_salons_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_corners_pale_grey"
            android:padding="2dp"
            android:text="4 صالات"
            android:textColor="@color/niceBlue"
            android:textSize="@dimen/text_size_tiny" />

    </LinearLayout>

</LinearLayout>