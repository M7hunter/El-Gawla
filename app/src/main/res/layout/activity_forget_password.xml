<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".views.login.ForgetPasswordActivity">

    <!-- header -->
    <TextView
        android:id="@+id/tv_forgot_pass_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/margin_large"
        android:text="@string/forgetPassword"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- back -->
    <include
        layout="@layout/layout_back"
        app:layout_constraintBottom_toBottomOf="@id/tv_forgot_pass_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_forgot_pass_header" />

    <!-- logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginTop="@dimen/margin_xxx_large"
        android:layout_marginEnd="@dimen/margin_xlarge"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:src="@drawable/gawla_logo_blue"
        app:layout_constraintBottom_toTopOf="@id/tv_forget_pass_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_pass_header" />

    <!-- hint -->
    <TextView
        android:id="@+id/tv_forget_pass_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_xlarge"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/margin_small"
        android:padding="@dimen/margin_xlarge"
        android:text="@string/wile_send_password"
        android:textColor="@color/midBlue"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tl_email_fp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_email_fp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_xlarge"
        android:textColorHint="@color/paleGrey2"
        app:errorEnabled="true"
        app:layout_constraintBottom_toTopOf="@id/btn_send_fp"
        app:layout_constraintTop_toBottomOf="@+id/tv_forget_pass_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email_fp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="auto"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/margin_xlarge"
            android:paddingTop="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_xlarge"
            android:paddingBottom="@dimen/margin_medium"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_send_fp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_xlarge"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:padding="@dimen/margin_large"
        android:text="@string/send"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl_email_fp" />

    <ProgressBar
        android:id="@+id/pb_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/btn_send_fp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_send_fp" />

</androidx.constraintlayout.widget.ConstraintLayout>