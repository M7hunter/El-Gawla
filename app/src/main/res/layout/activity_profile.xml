<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".views.account.ProfileActivity">
    <!-- scroll main layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- package_name bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl">

            <!-- header -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="@dimen/margin_small">
                    <!-- card main layout -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:layoutDirection="rtl">

                        <include
                            layout="@layout/layout_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_medium"
                            android:text="@string/profile"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- save btn -->
            <TextView
                android:id="@+id/btn_update_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_small"
                android:background="@drawable/bg_circled_corners_c_secondary"
                android:paddingStart="@dimen/margin_large"
                android:paddingTop="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_large"
                android:paddingBottom="@dimen/margin_small"
                android:text="@string/save"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <!-- update progress -->
            <ProgressBar
                android:id="@+id/progress_update_profile"
                android:layout_width="@dimen/icon_notification"
                android:layout_height="@dimen/icon_notification"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:visibility="invisible" />

        </RelativeLayout>

        <!-- user image container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_medium"
            android:layoutDirection="rtl">

            <!-- image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_account_Image"
                android:layout_width="@dimen/image_account"
                android:layout_height="@dimen/image_account"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_tiny"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <!-- btn upload image -->
            <ImageView
                android:id="@+id/btn_upload_image"
                android:layout_width="@dimen/icon_notification"
                android:layout_height="@dimen/icon_notification"
                android:background="@drawable/bg_circle_bordered_transparent"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/margin_small"
                android:src="@drawable/ic_check"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@id/btn_choose_image"
                app:layout_constraintStart_toStartOf="@id/btn_choose_image"
                app:layout_constraintTop_toTopOf="@id/btn_choose_image" />

            <!-- btn choose image -->
            <ImageButton
                android:id="@+id/btn_choose_image"
                android:layout_width="@dimen/icon_notification"
                android:layout_height="@dimen/icon_notification"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/bg_circle_mid_blue"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/margin_small"
                android:src="@drawable/ic_edit"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@id/iv_account_Image"
                app:layout_constraintStart_toStartOf="@id/iv_account_Image"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- first name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xxx_large"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginEnd="@dimen/margin_xxx_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:textColorHint="@color/paleGrey2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_update_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="auto"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/margin_xlarge"
                android:paddingTop="@dimen/margin_medium"
                android:paddingEnd="@dimen/margin_xlarge"
                android:paddingBottom="@dimen/margin_medium"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- email -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xxx_large"
            android:layout_marginEnd="@dimen/margin_xxx_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:textColorHint="@color/paleGrey2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_account_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/margin_xlarge"
                android:paddingTop="@dimen/margin_medium"
                android:paddingEnd="@dimen/margin_xlarge"
                android:paddingBottom="@dimen/margin_medium"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- phone -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxx_large"
            android:layout_marginRight="@dimen/margin_xxx_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:textColorHint="@color/paleGrey2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_update_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="auto"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:maxLength="15"
                android:paddingStart="@dimen/margin_xlarge"
                android:paddingTop="@dimen/margin_medium"
                android:paddingEnd="@dimen/margin_xlarge"
                android:paddingBottom="@dimen/margin_medium"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- country -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxx_large"
            android:layout_marginRight="@dimen/margin_xxx_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:textColorHint="@color/paleGrey2">

            <EditText
                android:id="@+id/my_sp_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:focusable="auto"
                android:hint="@string/country"
                android:inputType="none"
                android:paddingStart="@dimen/margin_xlarge"
                android:paddingTop="@dimen/margin_medium"
                android:paddingEnd="@dimen/margin_xlarge"
                android:paddingBottom="@dimen/margin_medium"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- gender -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxx_large"
            android:layout_marginRight="@dimen/margin_xxx_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:textColorHint="@color/paleGrey2">

            <EditText
                android:id="@+id/my_sp_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:focusable="auto"
                android:hint="@string/gender"
                android:inputType="none"
                android:paddingStart="@dimen/margin_xlarge"
                android:paddingTop="@dimen/margin_medium"
                android:paddingEnd="@dimen/margin_xlarge"
                android:paddingBottom="@dimen/margin_medium"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>