<?xml version="1.0" encoding="utf-8"?><!-- scroll main layout -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/all_salons_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGrey"
    tools:context=".views.salon.AllSalonsActivity">

    <!-- scroll main layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- header -->
        <include layout="@layout/layout_header" />

        <!-- title -->
        <TextView
            android:id="@+id/tv_all_salon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_large"
            android:gravity="center"
            android:text="@string/all_salons"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <!-- recyclers container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- dates -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/date_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                tools:itemCount="1"
                tools:listitem="@layout/item_salon_date" />

            <!-- cats -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/item_category_filter"
                tools:orientation="horizontal" />

            <!-- salons & empty view container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_weight="1"
                android:animateLayoutChanges="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- load anim -->
                <include
                    android:id="@+id/sh_all_salons"
                    layout="@layout/layout_shimmer_mini_salons"
                    android:visibility="gone" />

                <!-- salons recycler -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/all_salons_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_salon_mini" />

                <!-- load more -->
                <ProgressBar
                    android:id="@+id/pbp_salons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_tiny"
                    android:visibility="gone" />

                <!-- empty view -->
                <LinearLayout
                    android:id="@+id/all_salons_empty_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty_view" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_medium"
                        android:gravity="center"
                        android:text="@string/no_salons"
                        android:textColor="@color/blueGrey"
                        android:textSize="@dimen/text_size_medium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- filer -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/all_salon_filter_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/margin_medium"
        android:src="@drawable/ic_filter"
        app:backgroundTint="@color/colorPrimary" />

    <include layout="@layout/bottom_sheet_filter_by" />

    <include layout="@layout/bottom_sheet_calender" />

    <include layout="@layout/bottom_sheet_category" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>