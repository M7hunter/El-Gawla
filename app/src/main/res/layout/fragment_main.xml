<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".views.NavigationFragments.MainFragment">
    <!-- main layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <!-- scroll main layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <include layout="@layout/layout_main_header" />

            <!-- Ads card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_main_Ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_medium"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/margin_small"
                app:cardElevation="@dimen/margin_tiny">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/ads_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_width_main_fragment"
                    android:background="@drawable/bg_rounded_corners_blue_180" />

                <!-- card view main layout -->
                <LinearLayout
                    android:id="@+id/ads_empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:layoutDirection="ltr">

                    <ImageView
                        android:layout_width="@dimen/image_width_main_fragment"
                        android:layout_height="@dimen/image_width_main_fragment"
                        android:scaleType="fitXY"
                        android:src="@drawable/flodillus" />

                    <!-- texts -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/more_gawla_main_page"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_small"
                            android:gravity="center"
                            android:text="@string/ads"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- orange area 'with no need' -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_xxx_large"
                android:layout_marginEnd="@dimen/margin_xxx_large"
                android:background="@drawable/bg_rounded_bottom_corners_orange" />

            <!-- recent salons header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_x_small">

                <!-- header -->
                <TextView
                    android:id="@+id/recent_salons_header_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/recent_salons"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <!-- btn see all -->
                <TextView
                    android:id="@+id/recent_salons_see_all_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="@dimen/margin_small"
                    android:text="@string/see_all"
                    android:textColor="@color/midBlue"
                    android:textSize="@dimen/text_size_large" />

            </LinearLayout>

            <!-- recent salons container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- recent salons recycler -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recent_salons_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/margin_tiny"
                    android:layout_marginEnd="@dimen/margin_tiny" />

                <!-- recent salons progress -->
                <ProgressBar
                    android:id="@+id/recent_salons_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/margin_large" />

                <!-- empty view -->
                <LinearLayout
                    android:id="@+id/recent_salons_empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/empty_view_salons" />

                    <TextView
                        android:id="@+id/recent_salons_empty_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_medium"
                        android:gravity="center"
                        android:text="@string/no_salons"
                        android:textColor="@color/blueGrey"
                        android:textSize="@dimen/text_size_medium" />

                </LinearLayout>

                <!-- no connection view -->
                <include layout="@layout/layout_no_connection" />

            </RelativeLayout>

            <!-- winners news header -->
            <LinearLayout
                android:id="@+id/winners_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_x_small">

                <!-- header -->
                <TextView
                    android:id="@+id/winners_news_header_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/winners_of_hale_news"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <!-- btn see all -->
                <TextView
                    android:id="@+id/winners_news_see_all_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/margin_small"
                    android:text="@string/see_all"
                    android:textColor="@color/midBlue"
                    android:textSize="@dimen/text_size_large" />

            </LinearLayout>

            <!-- winners news container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- winners news recycler -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/winners_news_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_tiny"
                    android:layout_marginEnd="@dimen/margin_tiny" />

                <!-- winners news progress -->
                <ProgressBar
                    android:id="@+id/winners_news_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>