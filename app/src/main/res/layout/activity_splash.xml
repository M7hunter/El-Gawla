<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".views.intro.SplashActivity">

    <!-- logo -->
    <ImageView
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_margin="@dimen/margin_large"
        android:src="@drawable/gawla_logo" />

    <!-- hint -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xx_large"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_xx_large"
        android:layout_marginBottom="@dimen/margin_large"
        android:gravity="center"
        android:padding="@dimen/margin_tiny"
        android:text="@string/tit1e"
        android:textColor="@color/babyBlue"
        android:textSize="@dimen/text_size_medium" />

    <!-- lang -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium">

        <!-- sa flag-->
        <ImageView
            android:id="@+id/sa_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sa_flag"
            app:layout_constraintBottom_toTopOf="@id/btn_splash_arabic"
            app:layout_constraintEnd_toEndOf="@id/btn_splash_arabic"
            app:layout_constraintStart_toStartOf="@id/btn_splash_arabic"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- us flag -->
        <ImageView
            android:id="@+id/us_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/us_flag"
            app:layout_constraintBottom_toTopOf="@id/btn_splash_english"
            app:layout_constraintEnd_toEndOf="@id/btn_splash_english"
            app:layout_constraintStart_toStartOf="@id/btn_splash_english"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- sa check -->
        <ImageView
            android:id="@+id/sa_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flag_check"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/sa_flag"
            app:layout_constraintTop_toTopOf="@id/sa_flag" />

        <!-- us check -->
        <ImageView
            android:id="@+id/us_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flag_check"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/us_flag"
            app:layout_constraintTop_toTopOf="@id/us_flag" />

        <!-- ar -->
        <Button
            android:id="@+id/btn_splash_arabic"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arabic"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_splash_english"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- en -->
        <Button
            android:id="@+id/btn_splash_english"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/english"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_splash_arabic" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- countries header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:text="@string/choose_country"
        android:textAllCaps="true"
        android:textColor="@color/colorSecondary"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <!-- countries container -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        app:cardCornerRadius="@dimen/margin_xlarge"
        app:cardElevation="@dimen/margin_small">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/s_splash_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorLightPrimary"
            tools:listitem="@layout/item_country_spinner" />
    </androidx.cardview.widget.CardView>

</LinearLayout>