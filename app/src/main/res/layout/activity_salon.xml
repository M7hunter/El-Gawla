<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/salon_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGrey"
    tools:context=".Views.SalonActivity">

    <!-- main layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- logo & bell container -->
        <RelativeLayout
            android:id="@+id/salon_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layoutDirection="ltr">

            <!-- logo -->
            <ImageView
                android:layout_width="@dimen/logo_width"
                android:layout_height="@dimen/logo_height"
                android:layout_centerInParent="true"
                android:src="@drawable/gawla_logo_blue" />

            <!-- bell -->
            <ImageView
                android:layout_width="@dimen/icon_notification"
                android:layout_height="@dimen/icon_notification"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_tiny"
                android:src="@drawable/ic_bell" />

        </RelativeLayout>

        <!-- salon number container -->
        <LinearLayout
            android:id="@+id/salon_number_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/salon_header"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <!-- salon number label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hale_number"
                android:textColor="@color/battleshipGrey"
                android:textSize="@dimen/text_size_large" />

            <!-- salon number -->
            <TextView
                android:id="@+id/salon_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_tiny"
                android:textColor="@color/midBlue"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- time container -->
        <FrameLayout
            android:id="@+id/time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/salon_number_container"
            android:layout_centerHorizontal="true">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/bg_rounded_corners_white"
                app:cardCornerRadius="@dimen/margin_small">
                <!-- card main layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <!-- start time container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:layoutDirection="ltr">

                        <!-- hours container -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <!-- hours label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hour"
                                android:textColor="@color/duskBlue"
                                android:textSize="@dimen/text_size_medium" />

                            <!-- hours -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <!-- first number container -->
                                <RelativeLayout
                                    android:layout_width="@dimen/margin_xxlarge"
                                    android:layout_height="@dimen/margin_xxxlarge"
                                    android:layout_margin="@dimen/margin_tiny"
                                    android:background="@drawable/timeshape">

                                    <!-- number -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="0"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/text_size_xxlarge"
                                        android:textStyle="bold" />

                                    <!-- for background -->
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="26dp"
                                        android:background="@drawable/time_ops" />

                                </RelativeLayout>

                                <!--second number container -->
                                <RelativeLayout
                                    android:layout_width="@dimen/margin_xxlarge"
                                    android:layout_height="@dimen/margin_xxxlarge"
                                    android:layout_margin="@dimen/margin_tiny"
                                    android:background="@drawable/timeshape">

                                    <!-- number -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="0"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/text_size_xxlarge"
                                        android:textStyle="bold" />

                                    <!-- for background -->
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="26dp"
                                        android:background="@drawable/time_ops" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- minutes container -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <!-- minutes label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Minute"
                                android:textColor="@color/duskBlue"
                                android:textSize="@dimen/text_size_medium" />

                            <!-- minutes -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <!-- first number container -->
                                <RelativeLayout
                                    android:layout_width="@dimen/margin_xxlarge"
                                    android:layout_height="@dimen/margin_xxxlarge"
                                    android:layout_margin="@dimen/margin_tiny"
                                    android:background="@drawable/timeshape">

                                    <!-- number -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="0"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/text_size_xxlarge"
                                        android:textStyle="bold" />

                                    <!-- for background -->
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="26dp"
                                        android:background="@drawable/time_ops" />

                                </RelativeLayout>

                                <!--second number container -->
                                <RelativeLayout
                                    android:layout_width="@dimen/margin_xxlarge"
                                    android:layout_height="@dimen/margin_xxxlarge"
                                    android:layout_margin="@dimen/margin_tiny"
                                    android:background="@drawable/timeshape">

                                    <!-- number -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="0"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/text_size_xxlarge"
                                        android:textStyle="bold" />

                                    <!-- for background -->
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="26dp"
                                        android:background="@drawable/time_ops" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- seconds container -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <!-- seconds label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/second"
                                android:textColor="@color/duskBlue"
                                android:textSize="@dimen/text_size_medium" />

                            <!-- seconds -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <!-- first number container -->
                                <RelativeLayout
                                    android:layout_width="@dimen/margin_xxlarge"
                                    android:layout_height="@dimen/margin_xxxlarge"
                                    android:layout_margin="@dimen/margin_tiny"
                                    android:background="@drawable/timeshape">

                                    <!-- number -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="0"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/text_size_xxlarge"
                                        android:textStyle="bold" />

                                    <!-- for background -->
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="26dp"
                                        android:background="@drawable/time_ops" />

                                </RelativeLayout>

                                <!--second number container -->
                                <RelativeLayout
                                    android:layout_width="@dimen/margin_xxlarge"
                                    android:layout_height="@dimen/margin_xxxlarge"
                                    android:layout_margin="@dimen/margin_tiny"
                                    android:background="@drawable/timeshape">

                                    <!-- number -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="0"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/text_size_xxlarge"
                                        android:textStyle="bold" />

                                    <!-- for background -->
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="26dp"
                                        android:background="@drawable/time_ops" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- end time container -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:orientation="horizontal">

                        <!-- end time label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:text="@string/Discount_the_tour"
                            android:textColor="@color/blueGrey"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <!-- end time -->
                        <TextView
                            android:id="@+id/salon_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/paleRed"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </FrameLayout>

        <!-- add offer btn & et -->
        <LinearLayout
            android:id="@+id/add_offer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cards_container"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:orientation="horizontal"
            android:visibility="gone">

            <!-- add offer et -->
            <EditText
                android:id="@+id/add_offer_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/edittext_shape_add"
                android:gravity="center"
                android:hint="000"
                android:inputType="number"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:textColor="@color/battleshipGrey"
                android:textColorHint="@color/editText_hint" />

            <!-- add offer btn -->
            <Button
                android:id="@+id/add_offer_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/login_shape"
                android:text="@string/add_deal"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- for dimmed background -->
        <FrameLayout
            android:id="@+id/overlay_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_overlay"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/cards_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_container"
            android:orientation="vertical">

            <!-- product container -->
            <android.support.v7.widget.CardView
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/bg_rounded_corners_white"
                app:cardCornerRadius="@dimen/margin_small">
                <!-- card main layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- product image -->
                        <ImageView
                            android:id="@+id/salon_round_product_image"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_tiny"
                            android:layout_weight="1"
                            android:src="@drawable/macbook" />

                        <!-- details container -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_small"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <!-- product name -->
                            <TextView
                                android:id="@+id/salon_round_product_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_tiny"
                                android:gravity="center"
                                android:textColor="@color/duskBlue"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold" />

                            <!-- price container -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!-- price label -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Prod_price"
                                    android:textSize="@dimen/text_size_medium" />

                                <!-- price -->
                                <TextView
                                    android:id="@+id/salon_round_product_price"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="@color/azureTwo"
                                    android:textSize="@dimen/text_size_medium"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- read more as btn -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:padding="@dimen/margin_small"
                        android:text="@string/read_more"
                        android:textColor="@color/blueGrey" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- notification container -->
            <android.support.v7.widget.CardView
                android:id="@+id/round_notification_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/bg_rounded_corners_white"
                app:cardCornerRadius="@dimen/margin_tiny">
                <!-- card main layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- round's notification bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:gravity="center">

                        <!-- notification icon -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/round_notification_icon"
                            android:layout_width="@dimen/icon_notification"
                            android:layout_height="@dimen/icon_notification"
                            android:layout_margin="@dimen/margin_small"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_account" />

                        <!-- notification text -->
                        <TextView
                            android:id="@+id/round_notification_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:maxLines="2"
                            android:text="@string/joine_Round"
                            android:textColor="@color/blueGrey" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- join confirmation card -->
            <include layout="@layout/join_round_confirmation_layout" />

        </LinearLayout>

        <!-- join btn -->
        <Button
            android:id="@+id/btn_join_round"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/cards_container"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:background="@drawable/login_shape"
            android:text="@string/join_round"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- cards icon container -->
    <RelativeLayout
        android:id="@+id/cards_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@drawable/bg_circle_bordered_transparent"
        android:padding="@dimen/margin_small">

        <!-- icon -->
        <ImageView
            android:layout_width="@dimen/image_cards_round_updates"
            android:layout_height="@dimen/image_cards_round_updates"
            android:background="@drawable/bg_circle_blue_270"
            android:padding="@dimen/margin_large"
            android:src="@drawable/ic_cards"
            android:tint="@android:color/white" />

        <!-- cards notification -->
        <TextView
            android:layout_width="@dimen/margin_xlarge"
            android:layout_height="@dimen/margin_xlarge"
            android:background="@drawable/bg_circle_red"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- bottom sheet -->
    <include layout="@layout/bottom_sheet_round_update" />

</android.support.design.widget.CoordinatorLayout>