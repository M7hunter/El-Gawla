<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/salon_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGrey"
    tools:context=".views.SalonActivity">

    <LinearLayout
        android:id="@+id/salon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- header -->
        <RelativeLayout
            android:id="@+id/salon_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_medium">

                <!-- logo -->
                <ImageView
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="@dimen/logo_height"
                    android:layout_centerInParent="true"
                    android:src="@drawable/gawla_logo_blue" />

                <!-- bell -->
                <ImageView
                    android:id="@+id/notification_bell"
                    android:layout_width="@dimen/icon_notification"
                    android:layout_height="@dimen/icon_notification"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="@dimen/margin_tiny"
                    android:src="@drawable/bell" />

                <ImageView
                    android:id="@+id/salon_help"
                    android:layout_width="@dimen/icon_notification"
                    android:layout_height="@dimen/icon_notification"
                    android:layout_below="@id/notification_bell"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_tiny"
                    android:tint="@color/midBlue"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="@dimen/margin_tiny"
                    android:src="@drawable/q_mark_in_circle" />

            </RelativeLayout>

            <!-- back -->
            <ImageView
                android:id="@+id/salon_back"
                android:layout_width="@dimen/icon_back"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/margin_small"
                android:src="@drawable/ic_arrow_left_only" />

        </RelativeLayout>

        <!-- salon number container -->
        <LinearLayout
            android:id="@+id/salon_number_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_medium"
            android:orientation="horizontal">

            <!-- salon number label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/salon_number"
                android:textColor="@color/battleshipGrey"
                android:textSize="@dimen/text_size_large" />

            <!-- salon number -->
            <TextView
                android:id="@+id/salon_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_tiny"
                android:textColor="@color/midBlue"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- time container -->
        <include layout="@layout/layout_salon_countdown" />

        <!-- taps layout -->
        <include layout="@layout/layout_salon_taps" />

        <!-- layout on tab -->
        <include layout="@layout/layout_salon_on_tap" />

        <!-- add offer btn & et -->
        <LinearLayout
            android:id="@+id/add_offer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:orientation="horizontal"
            android:visibility="gone">

            <!-- add offer et -->
            <EditText
                android:id="@+id/add_offer_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_corners_bordered_white_pale_grey"
                android:gravity="center"
                android:hint="@string/rOffer"
                android:inputType="number"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:textColor="@color/battleshipGrey"
                android:textColorHint="@color/editText_hint" />

            <!-- add offer btn -->
            <Button
                android:id="@+id/add_offer_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:text="@string/add_offer"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- join btn -->
        <Button
            android:id="@+id/btn_join_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:background="@drawable/joined_play_shape"
            android:padding="@dimen/margin_small"
            android:text="@string/join_round"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- joined progress -->
        <ProgressBar
            android:id="@+id/join_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_tiny"
            android:visibility="gone" />

        <!-- btn use/buy golden card -->
        <Button
            android:id="@+id/btn_use_golden_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/bg_rounded_corners_red_270"
            android:text="@string/use_card_to_join"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- leave btn -->
        <Button
            android:id="@+id/btn_leave_round"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:padding="@dimen/margin_tiny"
            android:text="@string/leave"
            android:visibility="gone"
            app:icon="@drawable/ic_exit"
            app:rippleColor="@color/darkPaleRed" />

    </LinearLayout>

    <!-- cards bag btn container -->
    <include layout="@layout/layout_cards_free_button" />

    <!-- cards bag btn container -->
    <include layout="@layout/bottom_sheet_single_card" />

    <!-- loading -->
    <include layout="@layout/layout_loading_card" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>