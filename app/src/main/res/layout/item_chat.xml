<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_xTiny"
    android:layout_marginTop="@dimen/margin_xTiny"
    android:layout_marginEnd="@dimen/margin_tiny"
    android:layout_marginBottom="@dimen/margin_xTiny"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/chat_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_tiny"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="30"
        android:maxLines="2"
        android:text="user"
        android:textColor="@color/browser_actions_text_color"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/chat_card_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:background="@drawable/bg_rounded_corners_pale_grey"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_tiny"
            android:gravity="start"
            android:text="تامنننتمن"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_xTiny"
            android:layout_marginEnd="@dimen/margin_tiny"
            android:text="00000"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="@dimen/text_size_tiny" />

    </LinearLayout>

</LinearLayout>