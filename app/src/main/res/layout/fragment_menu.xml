<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGrey"
    tools:context=".views.NavigationFragments.MenuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <!-- main layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include layout="@layout/main_header_layout" />

                <!-- country -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/menu_country_icon"
                    android:layout_width="@dimen/icon_notification"
                    android:layout_height="@dimen/icon_notification"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_large"
                    android:src="@drawable/flag_egypt" />

            </RelativeLayout>

            <!-- title -->
            <TextView
                android:id="@+id/tv_menu_fragment_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="@string/menu_fragment_hint"
                android:textColor="@color/blueGrey"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <!-- top border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/paleGrey2" />

            <!-- 1st option -->
            <RelativeLayout
                android:id="@+id/menu_option_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small">

                <!-- label -->
                <TextView
                    android:id="@+id/tv_app_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/app_settings"
                    android:textColor="@color/darkSkyBlue"
                    android:textSize="@dimen/text_size_large" />

                <!-- icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:src="@drawable/ic_arrow" />

            </RelativeLayout>

            <!-- bottom border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/paleGrey2" />

            <!-- top border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/paleGrey2" />

            <!-- 2nd option -->
            <RelativeLayout
                android:id="@+id/menu_option_more_about_gawla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small">

                <!-- label -->
                <TextView
                    android:id="@+id/tv_more_about_gawla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/more_about_gawla"
                    android:textColor="@color/darkSkyBlue"
                    android:textSize="@dimen/text_size_large" />

                <!-- icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:src="@drawable/ic_arrow" />

            </RelativeLayout>

            <!-- separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/margin_xxlarge"
                android:layout_marginEnd="@dimen/margin_xxlarge"
                android:background="@color/paleGrey2" />

            <!-- 3rd option -->
            <RelativeLayout
                android:id="@+id/menu_option_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"

                android:paddingBottom="@dimen/margin_small">

                <!-- label -->
                <TextView
                    android:id="@+id/tv_privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/darkSkyBlue"
                    android:textSize="@dimen/text_size_large" />

                <!-- icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:src="@drawable/ic_arrow" />

            </RelativeLayout>

            <!-- separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/margin_xxlarge"
                android:layout_marginEnd="@dimen/margin_xxlarge"
                android:background="@color/paleGrey2" />

            <!-- 4th option -->
            <RelativeLayout
                android:id="@+id/menu_option_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small">

                <!-- label -->
                <TextView
                    android:id="@+id/tv_terms_and_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/terms_conditions"
                    android:textColor="@color/darkSkyBlue"
                    android:textSize="@dimen/text_size_large" />

                <!-- icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:src="@drawable/ic_arrow" />

            </RelativeLayout>

            <!-- bottom border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/paleGrey2" />

            <!-- top border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/paleGrey2" />

            <!-- 5th option -->
            <RelativeLayout
                android:id="@+id/menu_option_call_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small">

                <!-- label -->
                <TextView
                    android:id="@+id/tv_call_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/call_us"
                    android:textColor="@color/darkSkyBlue"
                    android:textSize="@dimen/text_size_large" />

                <!-- icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:src="@drawable/ic_arrow" />

            </RelativeLayout>

            <!-- bottom border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/paleGrey2" />

            <!-- top border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/paleGrey2" />

            <!-- 6th option -->
            <RelativeLayout
                android:id="@+id/menu_option_how_gawla_works"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small">

                <!-- label -->
                <TextView
                    android:id="@+id/tv_how_gawla_works"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/how_gawla_works"
                    android:textColor="@color/darkSkyBlue"
                    android:textSize="@dimen/text_size_large" />

                <!-- icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:src="@drawable/ic_arrow" />

            </RelativeLayout>

            <!-- bottom border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="@color/paleGrey2" />

            <!-- webViews recycler -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/web_views_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- top border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/paleGrey2" />

            <!-- 7th option -->
            <RelativeLayout
                android:id="@+id/menu_option_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small">

                <!-- label -->
                <TextView
                    android:id="@+id/tv_sign_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/sign_out"
                    android:textColor="@color/paleRed"
                    android:textSize="@dimen/text_size_large" />

                <!-- icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:src="@drawable/ic_arrow" />

            </RelativeLayout>

            <!-- bottom border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@color/paleGrey2" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>