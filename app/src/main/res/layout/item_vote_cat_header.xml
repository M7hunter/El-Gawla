<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="0dp">
    <!-- card main layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/lv_vote"
            android:layout_width="3dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@color/colorPrimary" />

        <!-- cat icon -->
        <ImageView
            android:id="@+id/iv_vote_header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:tint="@color/colorPrimary"
            tools:src="@drawable/vehicles" />

        <!-- cat name -->
        <TextView
            android:id="@+id/tv_vote_header_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:textStyle="bold"
            tools:text="@string/vehicles"
            tools:textColor="@color/colorPrimary" />

        <!-- votes count -->
        <TextView
            android:id="@+id/tv_votes_header_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_medium"
            android:text="@string/votes" />

        <!-- vote -->
        <ImageView
            android:id="@+id/iv_vote_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_medium"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/margin_tiny"
            android:src="@drawable/unvoted" />

    </LinearLayout>
</androidx.cardview.widget.CardView>