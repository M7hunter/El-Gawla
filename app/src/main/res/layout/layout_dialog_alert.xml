<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    android:background="@drawable/bg_rounded_corners_white"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="0dp">
    <!-- card main layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_small">

        <!-- icon -->
        <ImageView
            android:id="@+id/join_alert_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_8xlarge"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:src="@drawable/q_mark_in_circle"
            android:tint="@color/colorPrimary" />

        <!-- message -->
        <TextView
            android:id="@+id/tv_alert_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3xlarge"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_3xlarge"
            android:layout_marginBottom="@dimen/margin_xlarge"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/blueGrey"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <!-- buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr">

            <!-- negative btn -->
            <Button
                android:id="@+id/btn_alert_negative"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/paleRed"
                android:paddingStart="0dp"
                android:paddingTop="@dimen/btn_v_padding"
                android:paddingEnd="0dp"
                android:paddingBottom="@dimen/btn_v_padding"
                android:text="@string/cancel"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="visible" />

            <!-- positive btn -->
            <Button
                android:id="@+id/btn_alert_positive"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_weight="1"
                android:paddingStart="0dp"
                android:paddingTop="@dimen/btn_v_padding"
                android:paddingEnd="0dp"
                android:paddingBottom="@dimen/btn_v_padding"
                android:text="@string/continue_"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>