<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:background="@drawable/bg_rounded_corners_white"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="@dimen/margin_xtiny">
    <!-- main layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- time & id container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/battleshipGrey"
            android:gravity="center_vertical">

            <!-- salon id -->
            <View
                android:layout_width="@dimen/margin_xlarge"
                android:layout_height="@dimen/margin_medium"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@android:color/darker_gray" />

            <!-- separator -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/babyBlue" />

            <!-- salon state -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_medium"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_3xlarge"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_3xlarge"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

        <!-- image -->
        <View
            android:layout_width="@dimen/item_salon_product_image_width"
            android:layout_height="@dimen/item_salon_product_image_height"
            android:layout_marginTop="@dimen/margin_tiny"
            android:background="@android:color/darker_gray" />

        <!-- name -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_medium"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_3xlarge"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_3xlarge"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="@android:color/darker_gray" />

    </LinearLayout>
</androidx.cardview.widget.CardView>