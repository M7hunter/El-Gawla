<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".views.card.BuyCardActivity">

    <!-- header -->
    <RelativeLayout
        android:id="@+id/buy_card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr">

        <!-- back -->
        <ImageView
            android:id="@+id/buy_card_back"
            android:layout_width="@dimen/icon_back"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_arrow_left_only" />

        <!-- title -->
        <TextView
            android:id="@+id/tv_buy_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/card"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <!-- bell -->
        <ImageView
            android:id="@+id/notification_bell"
            android:layout_width="@dimen/icon_notification"
            android:layout_height="@dimen/icon_notification"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/margin_tiny"
            android:src="@drawable/bell" />

    </RelativeLayout>

    <!-- main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buy_card_header">
        <!-- scroll main layout -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/margin_small"
            app:cardElevation="@dimen/margin_tiny">
            <!-- card main layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_corners_white"
                android:orientation="vertical">

                <!-- amount label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_xlarge"
                    android:layout_marginBottom="@dimen/margin_tiny"
                    android:text="@string/amount"
                    android:textSize="@dimen/text_size_large" />

                <!-- amount container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:layout_marginEnd="@dimen/margin_xlarge"
                    android:background="@drawable/bg_rounded_corners_bordered_white_pale_grey"
                    android:gravity="center"
                    android:paddingStart="@dimen/margin_xTiny"
                    android:paddingTop="@dimen/margin_xTiny"
                    android:paddingEnd="@dimen/margin_xTiny"
                    android:paddingBottom="@dimen/margin_xTiny">

                    <!-- minus -->
                    <ImageView
                        android:id="@+id/iv_decrease_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_tiny"
                        android:src="@drawable/ic_remove_circle" />

                    <!-- count -->
                    <TextView
                        android:id="@+id/tv_card_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_weight="2"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold" />

                    <!-- plus -->
                    <ImageView
                        android:id="@+id/iv_increase_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_tiny"
                        android:src="@drawable/ic_add_circle" />

                </LinearLayout>

                <!-- category label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_marginEnd="@dimen/margin_xlarge"
                    android:layout_marginBottom="@dimen/margin_tiny"
                    android:text="@string/category"
                    android:textSize="@dimen/text_size_large" />

                <!-- category container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:layout_marginEnd="@dimen/margin_xlarge"
                    android:background="@drawable/bg_rounded_corners_bordered_white_pale_grey"
                    android:gravity="center"
                    android:paddingStart="@dimen/margin_xTiny"
                    android:paddingTop="@dimen/margin_tiny"
                    android:paddingEnd="@dimen/margin_xTiny"
                    android:paddingBottom="@dimen/margin_tiny">

                    <Spinner
                        android:id="@+id/sp_buy_card_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_xlarge"
                        android:paddingEnd="@dimen/margin_medium"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- method label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_marginEnd="@dimen/margin_xlarge"
                    android:layout_marginBottom="@dimen/margin_tiny"
                    android:text="@string/Payment_method"
                    android:textSize="@dimen/text_size_large" />

                <!-- payment methods -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:layout_marginEnd="@dimen/margin_xlarge"
                    android:background="@drawable/bg_rounded_corners_bordered_white_pale_grey"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_small">

                    <!-- 1st row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/rb_visa"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/card_width"
                            android:layout_margin="@dimen/margin_tiny" />

                        <ImageView
                            android:id="@+id/iv_visa"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/margin_large"
                            android:layout_weight="1"
                            android:src="@drawable/visa" />

                        <RadioButton
                            android:id="@+id/rb_mastercard"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/card_width"
                            android:layout_margin="@dimen/margin_tiny" />

                        <ImageView
                            android:id="@+id/iv_mastercard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/mastercard" />

                    </LinearLayout>

                    <!-- 2nd row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/rb_fawry"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/card_width"
                            android:layout_margin="@dimen/margin_tiny" />

                        <ImageView
                            android:id="@+id/iv_fawry"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/margin_large"
                            android:layout_weight="1"
                            android:src="@drawable/fawry" />

                        <RadioButton
                            android:id="@+id/rb_paypal"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/card_width"
                            android:layout_margin="@dimen/margin_tiny" />

                        <ImageView
                            android:id="@+id/iv_paypal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/paypal" />

                    </LinearLayout>

                    <!-- 3rd row -->
                    <LinearLayout
                        android:id="@+id/ll_use_googlepay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_tiny"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_googlepay"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/card_width"
                            android:layout_margin="@dimen/margin_tiny" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/icon_notification"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/googlepay_button_content_description"
                            android:src="@drawable/googlepay_mark_800_gray_3x" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="visa - paypal - mastercard" />

                    </LinearLayout>

                </LinearLayout>

                <!-- separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:layout_marginTop="@dimen/margin_xlarge"
                    android:layout_marginEnd="@dimen/margin_xlarge"
                    android:layout_marginBottom="@dimen/margin_xTiny"
                    android:background="@color/blueGrey" />

                <!-- price container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:layout_marginEnd="@dimen/margin_xlarge">

                    <!-- price label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_price"
                        android:textSize="@dimen/text_size_large" />

                    <!-- price -->
                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:padding="@dimen/margin_tiny"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        tools:text="150" />

                </LinearLayout>

                <!-- buy btns -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginEnd="@dimen/margin_xlarge"
                    android:layout_marginBottom="@dimen/margin_medium">

                    <!-- app btn -->
                    <Button
                        android:id="@+id/btn_buy_card_buy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/buy_card"
                        android:textSize="@dimen/text_size_large" />

                    <!-- google pay btn -->
                    <include
                        layout="@layout/googlepay_button"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</RelativeLayout>