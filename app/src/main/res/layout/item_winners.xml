<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:background="@drawable/bg_rounded_corners_white"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_horizontal"
    app:cardCornerRadius="@dimen/margin_small">
    <!-- card main layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- image -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_xtiny"
            app:cardCornerRadius="@dimen/margin_xtiny"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/news_image"
                android:layout_width="@dimen/image_news"
                android:layout_height="@dimen/image_news"
                android:scaleType="centerCrop"
                android:src="@drawable/flodillus"
                tools:src="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <!-- texts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- name -->
            <TextView
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xtiny"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/duskBlue"
                android:textSize="@dimen/text_size_medium"
                tools:text="@tools:sample/full_names" />

            <!-- description -->
            <TextView
                android:id="@+id/news_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xtiny"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/blueyGrey"
                android:textSize="@dimen/text_size_small"
                tools:text="@tools:sample/lorem" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>