<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainAccountDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".views.account.AccountDetailsActivity">
    <!-- scroll main layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- title bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- back -->
            <ImageView
                android:id="@+id/account_details_back"
                android:layout_width="@dimen/icon_back"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/back"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/margin_small"
                android:src="@drawable/ic_arrow_left_only" />

            <!-- title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/account_details"
                android:textColor="@color/battleshipGrey"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <!-- save btn -->
            <Button
                android:id="@+id/btn_update_profile"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/save"
                android:textColor="@color/darkSkyBlue"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <!-- update progress -->
            <ProgressBar
                android:id="@+id/progress_update_profile"
                android:layout_width="@dimen/icon_notification"
                android:layout_height="@dimen/icon_notification"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_large"
                android:visibility="invisible" />

        </RelativeLayout>

        <!-- user image container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:layoutDirection="rtl">

            <!-- image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_user_Image"
                android:layout_width="@dimen/image_account"
                android:layout_height="@dimen/image_account"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_tiny"
                app:civ_border_color="@color/blueyGrey"
                app:civ_border_width="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <!-- btn upload image -->
            <ImageView
                android:id="@+id/btn_upload_image"
                android:layout_width="@dimen/icon_notification"
                android:layout_height="@dimen/icon_notification"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/bg_circle_bordered_transparent"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/margin_small"
                android:src="@drawable/ic_check"
                android:visibility="visible"
                app:cornerRadius="4dp"
                app:layout_constraintEnd_toStartOf="@id/iv_user_Image"
                app:layout_constraintStart_toStartOf="@id/iv_user_Image"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- btn choose image -->
            <ImageButton
                android:id="@+id/btn_choose_image"
                android:layout_width="@dimen/icon_notification"
                android:layout_height="@dimen/icon_notification"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/bg_circle_mid_blue"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/margin_small"
                android:src="@drawable/ic_edit"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@id/iv_user_Image"
                app:layout_constraintStart_toStartOf="@id/iv_user_Image"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- first name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xxx_large"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginEnd="@dimen/margin_xxx_large"
            android:layout_marginBottom="@dimen/margin_xlarge"
            android:layout_weight="1"
            android:textColorHint="@color/paleGrey2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_update_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="auto"
                android:hint="@string/first_name"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/margin_xlarge"
                android:paddingTop="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_xlarge"
                android:paddingBottom="@dimen/margin_small"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- last name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxx_large"
            android:layout_marginRight="@dimen/margin_xxx_large"
            android:layout_marginBottom="@dimen/margin_xlarge"
            android:layout_weight="1"
            android:textColorHint="@color/paleGrey2">

            <EditText
                android:id="@+id/et_update_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="auto"
                android:hint="@string/second_name"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/margin_xlarge"
                android:paddingTop="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_xlarge"
                android:paddingBottom="@dimen/margin_small"
                android:textColorHint="@color/editText_hint"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- phone -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxx_large"
            android:layout_marginRight="@dimen/margin_xxx_large"
            android:layout_marginBottom="@dimen/margin_xlarge"
            android:layout_weight="1"
            android:textColorHint="@color/paleGrey2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_update_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="auto"
                android:hint="@string/telephone_number"
                android:inputType="phone"
                android:paddingStart="@dimen/margin_xlarge"
                android:paddingTop="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_xlarge"
                android:paddingBottom="@dimen/margin_small"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                app:helperText="+2" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- country -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxx_large"
            android:layout_marginRight="@dimen/margin_xxx_large"
            android:layout_marginBottom="@dimen/margin_xlarge"
            android:layout_weight="1"
            android:textColorHint="@color/paleGrey2">

            <EditText
                android:id="@+id/my_sp_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:focusable="auto"
                android:hint="@string/country"
                android:inputType="none"
                android:paddingStart="@dimen/margin_xlarge"
                android:paddingTop="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_medium"
                android:paddingBottom="@dimen/margin_small"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- gender -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxx_large"
            android:layout_marginRight="@dimen/margin_xxx_large"
            android:layout_marginBottom="@dimen/margin_xlarge"
            android:layout_weight="1"
            android:textColorHint="@color/paleGrey2">

            <EditText
                android:id="@+id/my_sp_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:focusable="auto"
                android:hint="@string/gender"
                android:inputType="none"
                android:paddingStart="@dimen/margin_xlarge"
                android:paddingTop="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_medium"
                android:paddingBottom="@dimen/margin_small"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>