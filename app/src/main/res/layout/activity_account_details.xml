<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".views.accountOptions.AccountDetailsActivity">
    <!-- scroll main layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:orientation="vertical">

        <!-- title bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layoutDirection="ltr">

            <!-- back -->
            <ImageView
                android:id="@+id/account_details_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/margin_medium"
                android:scaleType="fitStart"
                android:src="@drawable/ic_arrow_back" />

            <!-- title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/account_details"
                android:textColor="@color/battleshipGrey"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <!-- save btn -->
            <TextView
                android:id="@+id/btn_update_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/margin_small"
                android:text="@string/save"
                android:textColor="@color/midBlue"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progress_update_profile"
                android:layout_width="@dimen/icon_notification"
                android:layout_height="@dimen/icon_notification"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_tiny"
                android:visibility="invisible" />

        </RelativeLayout>

        <!-- user image container -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small">

            <!-- image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_update_Image"
                android:layout_width="@dimen/image_account"
                android:layout_height="@dimen/image_account"
                android:layout_margin="@dimen/margin_tiny"
                android:background="@drawable/bg_circle_blue_grey"
                app:civ_border_color="@color/blueyGrey"
                app:civ_border_width="1dp" />

            <!-- btn edit -->
            <ImageView
                android:id="@+id/btn_choose_image"
                android:layout_width="@dimen/icon_notification"
                android:layout_height="@dimen/icon_notification"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_circle_mid_blue"
                android:padding="@dimen/margin_tiny"
                android:src="@drawable/ic_edit" />

        </RelativeLayout>

        <TextView
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_width"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginRight="@dimen/card_width"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="@string/first_name"
            android:textColor="@color/blueGrey"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_update_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/card_width"
            android:layout_marginRight="@dimen/card_width"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape"
            android:focusable="auto"
            android:fontFamily="@font/cairo_regular"
            android:gravity="start|center"
            android:hint="@string/first_name"
            android:inputType="textPersonName"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/editText_hint"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_width"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginRight="@dimen/card_width"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="@string/second_name"
            android:textColor="@color/blueGrey"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_update_second_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/card_width"
            android:layout_marginRight="@dimen/card_width"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape"
            android:focusable="auto"
            android:fontFamily="@font/cairo_regular"
            android:gravity="start|center"
            android:hint="@string/second_name"
            android:inputType="textPersonName"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/editText_hint"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/editText11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_width"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginRight="@dimen/card_width"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="@string/country"
            android:textColor="@color/blueGrey"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp_update_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_width"
            android:layout_marginRight="@dimen/card_width"
            android:layout_weight="1"
            android:background="@drawable/account_details_spinner_shape"
            android:entries="@array/ArrCountry"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/editText12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_width"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginRight="@dimen/card_width"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="@string/gender"
            android:textColor="@color/blueGrey"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp_update_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_width"
            android:layout_marginRight="@dimen/card_width"
            android:layout_weight="1"
            android:background="@drawable/account_details_spinner_shape"
            android:entries="@array/ArrGender"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_width"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginRight="@dimen/card_width"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="@string/telephone_number"
            android:textColor="@color/blueGrey"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_width"
            android:layout_marginRight="@dimen/card_width"
            android:layout_marginBottom="40dp">

            <EditText
                android:id="@+id/ed_update_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/edittext_shape"
                android:focusable="auto"
                android:fontFamily="@font/cairo_regular"
                android:gravity="center"
                android:hint="@string/telephone_number"
                android:inputType="phone"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/editText_hint"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:text="+2"
                android:textColor="@color/com_facebook_button_background_color_disabled"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>



