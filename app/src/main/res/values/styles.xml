<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/darkSkyBlue</item>
        <item name="colorPrimaryVariant">@color/BlueDark</item>
        <item name="colorSecondary">@color/darkSkyBlue</item>
        <item name="android:statusBarColor">@color/paleGrey</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="Widget.MaterialComponents.Button.Icon" parent="Widget.MaterialComponents.Button" tools:override="true">
        <item name="rippleColor">@color/paleGrey2</item>
    </style>

</resources>
